<%- include ("header") %>

<div class="container">

  <section class="content">
    <h1>My Blog Website</h1>
    <p>Here you will see posts I want to share with the internet.</p>
    <hr>

    <% posts.forEach (function(post) { %>
      <h1><%= post.title %></h1>
      <p>
        <%= post.content.substring(0, 250) + " ..." %>
        <a href="<%= "/posts/" + post.title %>">Read more</a>
      </p>
    <% }); %>

  </section>

</div>

<%- include ("footer") %>
